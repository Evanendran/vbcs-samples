{
  "pageModelVersion": "18.2.3",
  "title": "Beers List",
  "description": "The starting page of the flow",
  "variables": {
    "beerListServiceDataProvider": {
      "type": "vb/ServiceDataProvider",
      "defaultValue": {
        "endpoint": "businessObjects/getall_Beer",
        "idAttribute": "id",
        "itemsPath": "items",
        "responseType": "flow:getallBeerResponse",
        "uriParameters": {
          "q": "{{ $functions.getQueryCondition($variables.beerFilterCriteria) }}"
        },
        "sortCriteria": [
          {
            "attribute": "{{ 'name' }}"
          }
        ]
      }
    },
    "beerFilterCriteria": {
      "type": {
        "name": "string",
        "selectedTypes": "number[]",
        "selectedCountries": "number[]",
        "selectedQualities": "number[]",
        "minAlcohol": "number",
        "maxAlcohol": "number"
      },
      "persisted": "history"
    },
    "beerTypeListServiceDataProvider": {
      "type": "vb/ServiceDataProvider",
      "defaultValue": {
        "endpoint": "businessObjects/getall_BeerType",
        "idAttribute": "id",
        "itemsPath": "items",
        "responseType": "flow:getallBeerTypeResponse",
        "sortCriteria": [
          {
            "attribute": "{{ 'name' }}"
          }
        ]
      }
    },
    "qualityListServiceDataProvider": {
      "type": "vb/ServiceDataProvider",
      "defaultValue": {
        "endpoint": "businessObjects/getall_Quality",
        "idAttribute": "id",
        "itemsPath": "items",
        "responseType": "flow:getallQualityResponse",
        "sortCriteria": [
          {
            "attribute": "{{ 'name' }}"
          }
        ]
      }
    },
    "countryListServiceDataProvider": {
      "type": "vb/ServiceDataProvider",
      "defaultValue": {
        "endpoint": "businessObjects/getall_Country",
        "idAttribute": "id",
        "itemsPath": "items",
        "responseType": "flow:getallCountryResponse",
        "sortCriteria": [
          {
            "attribute": "{{ 'name' }}"
          }
        ]
      }
    },
    "showAdvancedFilter": {
      "type": "boolean",
      "defaultValue": false,
      "persisted": "history"
    }
  },
  "types": {},
  "chains": {
    "navigateToCreateNewBeer": {
      "root": "navigateToPage1",
      "description": "",
      "actions": {
        "navigateToPage1": {
          "module": "vb/action/builtin/navigateToPageAction",
          "parameters": {
            "page": "CreateBeer"
          }
        }
      }
    },
    "navigateToEditBeer": {
      "description": "",
      "variables": {
        "detail": {
          "required": true,
          "type": "any",
          "input": "fromCaller"
        },
        "key": {
          "required": true,
          "type": "any",
          "input": "fromCaller"
        }
      },
      "root": "navigateToPage1",
      "actions": {
        "navigateToPage1": {
          "module": "vb/action/builtin/navigateToPageAction",
          "parameters": {
            "page": "EditBeer",
            "history": "push",
            "params": {
              "beerId": "{{ $chain.variables.key }}"
            }
          }
        }
      }
    },
    "toggleAdvancedFilterPanel": {
      "root": "assignVariables1",
      "description": "",
      "actions": {
        "assignVariables1": {
          "module": "vb/action/builtin/assignVariablesAction",
          "parameters": {
            "$page.variables.showAdvancedFilter": {
              "source": "{{ !$page.variables.showAdvancedFilter }}"
            }
          }
        }
      }
    },
    "resetFilterCriteria": {
      "root": "assignVariables1",
      "description": "",
      "actions": {
        "assignVariables1": {
          "module": "vb/action/builtin/assignVariablesAction",
          "parameters": {
            "$page.variables.beerFilterCriteria": {
              "source": {},
              "reset" : "toDefault"
            }
          }
        }
      }
    }
  },
  "eventListeners": {
    "newBeerClick": {
      "chains": [{
        "chainId": "navigateToCreateNewBeer"
      }]
    },
    "beerDetailClick": {
      "chains": [{
        "chainId": "navigateToEditBeer",
        "parameters": {
          "detail": "{{ $event.detail }}",
          "key": "{{ $current.key }}"
        }
      }]
    },
    "toggleFilter": {
      "chains": [
        {
          "chainId": "toggleAdvancedFilterPanel"
        }
      ]
    }
  },
  "imports": {
    "components": {
      "oj-table": {
        "path": "ojs/ojtable"
      },
      "oj-button": {
        "path": "ojs/ojbutton"
      },
      "oj-label": {
        "path": "ojs/ojlabel"
      },
      "oj-input-text": {
        "path": "ojs/ojinputtext"
      },
      "oj-select-many": {
        "path": "ojs/ojselectcombobox"
      },
      "oj-checkboxset": {
        "path": "ojs/ojcheckboxset"
      },
      "oj-input-number": {
        "path": "ojs/ojinputnumber"
      },
      "oj-form-layout": {
        "path": "ojs/ojformlayout"
      }
    }
  }
}